<h1 align="center">Signup here !</h1>

<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@user, :html => {class: "form-horizontal",role: "form"}) do |a| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= a.label :username%><br>
          </div>
          <div class="col-sm-8">
            <%= a.text_field :username, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= a.label :email %><br>
          </div>
          <div class="col-sm-10">
            <%= a.email_field :email, rows: 10, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= a.label :password %><br>
          </div>
          <div class="col-sm-10">
            <%= a.password_field :password, rows: 10, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= a.submit "Sign up", class: "btn btn-primary btn-large"%>
          </div>
        </div>
    <% end %>
    <div class="col-xs-2"></div>
    <%= link_to 'Go back to articles', articles_path %>
  </div>
</div>
