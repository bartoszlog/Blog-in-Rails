%h2{:align => 'center'}
  = @article.title
.well
  %h3.description{:align => 'center'}
    = @article.description
  .show-actions
    - if logged_in? && current_user == @article.user
      = link_to 'Edit this article', edit_article_path(@article),class: 'btn btn-xs btn-primary'
      = link_to 'Delete this article', article_path(@article), method: :delete, data: {confirm: "Are you sure ?"}, class: 'btn btn-xs btn-danger'
    = link_to 'All articles', articles_path, class: 'btn btn-xs btn-success'